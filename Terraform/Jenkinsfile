pipeline {
  agent any
  environment {
    TF_VAR_aws_id = credentials('aws_id')
    TF_VAR_access_key = credentials('access_key')
    TF_VAR_secret_key = credentials('secret_key')
  }
  stages {
    stage('Install Terraform') {
      steps {        
        dir('Terraform') {
          sh "wget https://releases.hashicorp.com/terraform/1.0.8/terraform_1.0.8_linux_386.zip"
          sh "ls"
          sh "unzip -o terraform_1.0.8_linux_386.zip"
          sh "ls"
        }
      }  
    }
    stage('Terraform Init') {
      steps { 
        dir('Terraform')  {
          sh "./terraform init"
        }
      }
    }
    stage('Terraform Plan') {
      steps {
        dir('Terraform') {
          sh "./terraform plan -out=tfplan"
        }
      }
    }
    stage('Terraform Apply') {
      steps {
        dir('Terraform') {
          sh "./terraform apply -auto-approve tfplan"
        }
      }
    }
  }
}